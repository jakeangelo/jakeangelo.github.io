{
  "scripts": {
    "watch-pug": "pug ./src --out=./site -w",
    "watch-sass": "node-sass --include-path scss assets/stylesheets/main.scss  public/stylesheets/main.css -w",
    "reload": "node ./livereload.js",
    "startdev": "yarn run watch-pug & yarn run watch-sass & yarn run reload"
  },
  "dependencies": {
    "livereload": "^0.6.2",
    "node-sass": "^4.5.2",
    "pug-cli": "^1.0.0-alpha6"
  }
}
